---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'MedPull - Empowering Community Health Centers',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions=[
      {
        variant: 'primary',
        text: 'Get Started',
        href: '#features',
        icon: 'tabler:plus',
      },
      { text: 'Learn more', href: '#features' },
    ]
    image={{ src: '~/assets/images/hero-medpull.png', alt: 'MedPull Hero Image' }}
  >
    <Fragment slot="title">
      Transforming <span class="text-accent dark:text-white highlight"> Community Health </span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">MedPull</span> helps community health centers manage inventory, grow their reach, and assist uninsured individuals with real-time data.</span
      >
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note>
    MedPull bridges the gap between health centers and the uninsured by offering essential data and tools.
  </Note>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="How MedPull Empowers Health Centers"
    subtitle="A comprehensive solution for inventory management, patient outreach, and data accessibility."
    items=[
      {
        title: 'Inventory Management',
        description:
          'Track and manage medication stock levels in real time, preventing shortages and optimizing supply.',
        icon: 'tabler:box',
      },
      {
        title: 'Real-time Patient Data',
        description:
          'Provide uninsured patients with up-to-date information on nearby health centers, wait times, and available medications.',
        icon: 'tabler:clock',
      },
      {
        title: 'Patient Acquisition',
        description:
          'Enable health centers to expand their reach by attracting more patients through visibility and data accessibility.',
        icon: 'tabler:user-plus',
      },
    ]
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="About MedPull"
    title="Improving Access to Community Health Services"
    items=[
      {
        title: 'Supporting the Uninsured',
        description:
          'MedPull helps uninsured individuals locate nearby health centers and access essential services with ease.',
      },
      {
        title: 'Boosting Efficiency for Health Centers',
        description:
          'Our platform streamlines operations, reduces wait times, and improves overall patient experiences.',
      },
    ]
    image={{
      src: 'https://images.unsplash.com/photo-healthcare.jpg',
      alt: 'Healthcare Access Image',
    }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="Get Started with MedPull in 3 Easy Steps"
    items=[
      {
        title: 'Step 1: <span class="font-medium">Sign Up</span>',
        description:
          'Create an account for your health center to start managing inventory and patient data.',
        icon: 'tabler:login',
      },
      {
        title: 'Step 2: <span class="font-medium">Add Center Details</span>',
        description:
          'Input your centerâ€™s location, services, and medications to reach more patients.',
        icon: 'tabler:edit',
      },
      {
        title: 'Step 3: <span class="font-medium">Track & Grow</span>',
        description:
          'Manage inventory and monitor patient data in real time while expanding your patient base.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions=[
      {
        variant: 'primary',
        text: 'Join MedPull',
        href: '#signup',
        icon: 'tabler:heart',
      },
    ]
  >
    <Fragment slot="title">
      Join the <span class="text-accent dark:text-white">Health Revolution</span>
    </Fragment>
  </CallToAction>
</Layout>

